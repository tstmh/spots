@model SPOTSAdminModule.ViewModels.SummonsStatisticsUsersViewModel

@{
    ViewBag.Title = "List Summons Statistics (Users)";
    Layout = "~/Views/Shared/_PdfLayout.cshtml";

    var rowNo = 0;
    var m401Total = 0;
    var echoTotal = 0;
}

<div class="row">
    <div class="col-xs-12">
        <h3>Report Name: @ViewBag.Title</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Search Criteria:</h4>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    @if (Model.SearchModel != null)
    {
        <table>
            <tbody>
                <tr>
                    <td id="report">Date From:</td>
                    <td id="report">@(Model.SearchModel.SearchFromDate != null ? Model.SearchModel.SearchFromDate.Value.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <td id="report">Date To:</td>
                    <td id="report">@(Model.SearchModel.SearchToDate != null ? Model.SearchModel.SearchToDate.Value.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <td id="report">Officer ID:</td>
                    <td id="report">@(Model.SearchModel.SearchOfficerId)</td>
                </tr>
                <tr>
                    <td style="color: rgba(250, 250, 250, 0.00);">n</td>
                </tr>
            </tbody>
        </table>
    }
</div>

<div class="row">
    <div class="col-xs-3 col-xs-offset-3">
    </div>
</div>

@if (Model.SummonsStatisticsUsersReport.Any())
{
    if (@Model.SummonsStatisticsUsersReport.Count() > 0)
    {
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-responsive table-striped table-hover" id="searchResult" style="font-size:16px">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>m401 Issued</th>
                            <th>m401E Issued</th>
                            <th>Total Issued</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.SummonsStatisticsUsersReport)
                    {
                        var rowClass = (rowNo % 2) == 0 ? "" : "alternateRow";

                            <tr class="@rowClass">
                                <td>@(rowNo += 1)</td>
                                <td>@user.UserId</td>
                                <td>@user.Username</td>
                                <td>@user.M401</td>
                                <td>@user.Echo</td>
                                <td>@(user.Echo + user.M401)</td>
                            </tr>
                            m401Total += user.M401;
                            echoTotal += user.Echo;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total</td>
                            <td>@m401Total</td>
                            <td>@echoTotal</td>
                            <td>@(m401Total + echoTotal)</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <p style="font-size:16px">Total Records Found: @(m401Total + echoTotal)</p>
                <p style="font-size:16px">Generated by: @HttpContext.Current.User.Identity.Name, @Model.ReportGeneratedBy</p>
                <p style="font-size:16px">Generated on: @Model.GeneratedDateTime</p>
            </div>
        </div>
    }
}