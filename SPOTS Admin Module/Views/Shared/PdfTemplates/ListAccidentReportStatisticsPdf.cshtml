@model SPOTSAdminModule.ViewModels.ListAccidentReportViewModel

@{
    ViewBag.Title = "OSI STATISTICS (USER)";
    Layout = "~/Views/Shared/_PdfLayout.cshtml";

    var rowNo = 0;
    var totalAccidentReportsSubmitted = 0;
    if (Model?.AccidentReportStatisticList != null)
    {
        var tempSearchParameterString = Model.SearchParameterString;
    }
}


<div class="row">
    <div class="col-xs-12">
        <h3>Report Name: @ViewBag.Title</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Search Criteria:</h4>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    @if (Model.SearchModel != null)
    {
        <table>
            <tbody>
                <tr>
                    <td id="report">Date & Time From:</td>
                    <td id="report">@(Model.SearchModel.SearchFromDate != null ? Model.SearchModel.SearchFromDate.Value.ToShortDateString() + " " + Model.SearchModel.SearchFromTime.Value.ToShortTimeString() : "")</td>                    
                </tr>
                <tr>
                    <td id="report">Date & Time To:</td>
                    <td id="report">@(Model.SearchModel.SearchToDate != null ? Model.SearchModel.SearchToDate.Value.ToShortDateString() + " " + Model.SearchModel.SearchToTime.Value.ToShortTimeString() : "")</td>
                </tr>
                <tr>
                    <td id="report">Officer ID:</td>
                    <td id="report">@(Model.SearchModel.SearchOfficerId)</td>
                </tr>
                <tr>
                    <td style="color: rgba(250, 250, 250, 0.00);">n</td>
                </tr>
            </tbody>
        </table>
    }
</div>

<div class="row">
    <div class="col-xs-3 col-xs-offset-3">
    </div>
</div>

@if (Model?.AccidentReportStatisticList != null)
{
    if (Model.AccidentReportStatisticList.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <table class="table table-responsive table-striped table-hover" id="searchResult" style="font-size:16px">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Officer ID</th>
                            <th>Officer Name</th>
                            <th>Accident Report Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var accidentReportStatistic in Model.AccidentReportStatisticList)
                    {
                        var rowClass = rowNo % 2 == 0 ? "" : "alternateRow";
                        totalAccidentReportsSubmitted = totalAccidentReportsSubmitted + @accidentReportStatistic.AccidentReportsSubmitted;

                            <tr class="@rowClass">
                                <td>@(rowNo += 1)</td>
                                <td>@accidentReportStatistic.AdAccount</td>
                                <td>@accidentReportStatistic.UserName</td>
                                <td>@accidentReportStatistic.AccidentReportsSubmitted</td>
                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total</td>
                            <td>@totalAccidentReportsSubmitted</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <p style="font-size:16px">Total Records Found: @Model.AccidentReportStatisticList.Count()</p>
                <p style="font-size:16px">Generated by: @HttpContext.Current.User.Identity.Name, @Model.ReportGeneratedBy</p>
                <p style="font-size:16px">Generated on: @Model.GeneratedDateTime</p>
            </div>
        </div>
    }
}

