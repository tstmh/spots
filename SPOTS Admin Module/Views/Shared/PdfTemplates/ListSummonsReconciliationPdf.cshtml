@model SPOTSAdminModule.ViewModels.SummonsReconciliationViewModel

@{
    ViewBag.Title = "List Summons Reconciliation";
    Layout = "~/Views/Shared/_PdfLayout.cshtml";

    var rowNo = 0;
}

<div class="row">
    <div class="col-xs-12">
        <h3>Report Name: @ViewBag.Title</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Search Criteria:</h4>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    @if (Model.SearchModel != null)
    {
        <table>
            <tbody>
                <tr>
                    <td id="report">Date From:</td>
                    <td id="report">@(Model.SearchModel.SearchFromDate != null ? Model.SearchModel.SearchFromDate.Value.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <td id="report">Date To:</td>
                    <td id="report">@(Model.SearchModel.SearchToDate != null ? Model.SearchModel.SearchToDate.Value.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <td id="report">Officer ID:</td>
                    <td id="report">@(Model.SearchModel.SearchOfficerId)</td>
                </tr>
                <tr>
                    <td style="color: rgba(250, 250, 250, 0.00);">n</td>
                </tr>
            </tbody>
        </table>
    }
</div>

<div class="row">
    <div class="col-xs-3 col-xs-offset-3">
    </div>
</div>

@if (Model != null && Model.SummonsReconciliationList != null)
{
    if (@Model.SummonsReconciliationList.Count() > 0)
    {
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-responsive table-striped table-hover" id="searchResult" style="font-size:16px">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Summons Type</th>
                            <th>Report No.</th>
                            <th>Offence Date</th>
                            <th>Location</th>
                            <th>Vehicle No.</th>
                            <th>Offender NRIC</th>
                            <th>Officer ID</th>
                            <th>Officer Service No.</th>
                            <th>Date Uploaded</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enquirySummons in Model.SummonsReconciliationList)
                        {
                            var rowClass = (rowNo % 2) == 0 ? "" : "alternateRow";

                            <tr class="@rowClass">
                                <td>@(rowNo += 1)</td>
                                <td>@enquirySummons.SummonsType</td>
                                <td>@enquirySummons.TimsReportNo</td>
                                <td>@enquirySummons.OffenceDateTime</td>
                                <td>@enquirySummons.Location</td>
                                <td>@enquirySummons.VehicleNo</td>
                                <td>@enquirySummons.OffenderPersonNRIC</td>
                                <td>@enquirySummons.AdAccount</td>
                                <td>@enquirySummons.DisplayName</td>
                                <td>@enquirySummons.SentToTimsDateTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <p style="font-size:16px">Total Records Found: @(Model.SummonsReconciliationList.Count())</p>
                <p style="font-size:16px">Generated by: @HttpContext.Current.User.Identity.Name, @Model.ReportGeneratedBy</p>
                <p style="font-size:16px">Generated on: @Model.GeneratedDateTime</p>
            </div>
        </div>
    }
}