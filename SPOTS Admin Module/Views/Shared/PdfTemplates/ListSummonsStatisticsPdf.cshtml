@model SPOTSAdminModule.ViewModels.SummonsStatisticsViewModel

@{
    ViewBag.Title = "List Summons Statistics";
    Layout = "~/Views/Shared/_PdfLayout.cshtml";

    var rowNo = 0;
}

<div class="row">
    <div class="col-xs-12">
        <h3>Report Name: @ViewBag.Title</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h4>Search Criteria:</h4>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    @if (Model.SearchModel != null)
    {
        <table>
            <tbody>
                <tr>
                    <td id="report">Date From:</td>
                    <td id="report">@(Model.SearchModel.SearchFromDate != null ? Model.SearchModel.SearchFromDate.Value.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <td id="report">Date To:</td>
                    <td id="report">@(Model.SearchModel.SearchToDate != null ? Model.SearchModel.SearchToDate.Value.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <td style="color: rgba(250, 250, 250, 0.00);">n</td>
                </tr>
            </tbody>
        </table>
    }
</div>

<div class="row">
    <div class="col-xs-3 col-xs-offset-3">
    </div>
</div>

@if (Model != null && Model.SummonsStatisticsReport != null)
{
    var total = 0;
    foreach (var type in Model.SummonsStatisticsReport)
    {
        total += type.Count;
    }

    if (total > 0)
    {
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-responsive table-striped table-hover" id="searchResult" style="font-size:16px">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Summons Type</th>
                            <th>Total Created</th>
                        </tr>
                    </thead>
                    @foreach (var summon in Model.SummonsStatisticsReport)
                    {
                        var rowClass = (rowNo % 2) == 0 ? "" : "alternateRow";

                        <tr class="@rowClass">
                            <td>@(rowNo += 1)</td>
                            <td>@summon.Type</td>
                            <td>@summon.Count</td>
                        </tr>
                    }
                    <tr>
                        <td class=""></td>
                        <td class="">Total</td>
                        <td class="">@total</td>
                    </tr>
                </table>

            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <p style="font-size:16px">Total Records Found: @total</p>
                <p style="font-size:16px">Generated by: @HttpContext.Current.User.Identity.Name, @Model.ReportGeneratedBy</p>
                <p style="font-size:16px">Generated on: @Model.GeneratedDateTime</p>
            </div>
        </div>
    }
}

