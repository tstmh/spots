@model SPOTSAdminModule.ViewModels.ListUserViewModel

@Scripts.Render("~/bundles/datatable")
 
<table class="table table-responsive table-striped table-hover" id="searchResult">
    <thead>
        <tr>
            <th>S/N</th>
            <th>User Name</th>
            <th>Display Name</th>
            <th>User Group</th>
            <th align="center">ACTION</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
            {

                int rowNo = 0;
                var rowClass = "";
                foreach (var item in Model.UserList)
                {
                    rowClass = (rowNo % 2) == 0 ? "" : "alternateRow";

                <tr class="@rowClass">
                    <td>@(rowNo += 1)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.ad_account)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.display_name)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserGroupListText)
                    </td>
                    <td align="center">
                        <a href="@Url.Action("Edit", "UserAdmin", new { userID = item.User.user_id })" title="" class="actionImage">
                            <img alt="Edit" src="@Url.Content("~/Content/Images/edit.png")" />
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


     
<script>
    $(document).ready(function(){
        showPagination();
    });
</script>
